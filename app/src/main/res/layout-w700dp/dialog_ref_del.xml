<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/refresh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_transparent_button"
        android:drawableLeft="@drawable/ic_autorenew_grey600_36dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="@string/diag_refresh_station"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/edit_st"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_transparent_button"
        android:drawableLeft="@drawable/ic_mode_edit_grey600_36dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="@string/edit_station"
        >
    </Button>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_transparent_button"
        android:drawableLeft="@drawable/ic_delete_grey600_36dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="@string/diag_delete_station"
        >
    </Button>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/fullscreen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_transparent_button"
        android:drawableLeft="@drawable/ic_fullscreen_grey600_36dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="@string/diag_station_full_screen" >
    </Button>


</LinearLayout>